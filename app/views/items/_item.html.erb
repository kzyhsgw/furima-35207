<li class='list'>
  <%= link_to item_path(item.id) do %>
  <div class='item-img-content'>
    <% if item.images.count > 0 %>
      <%= image_tag item.images.first.variant(resize: '300x300') %>
    <% end %>

    <% if Order.find_by(item_id: item.id) %>
      <div class='sold-out'>
        <span>Sold Out!!</span>
      </div>
    <% end %>

  </div>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= item.name %>
    </h3>
    <div class='item-price'>
      <span><%= item.price %>å††<br><%= Postage.find(item.postage_id).name %></span>
      <div class='star-btn'>
        <%= image_tag "star.png", class:"star-icon" %>
        <span class='star-count'>0</span>
      </div>
    </div>
  </div>
  <% end %>
</li>